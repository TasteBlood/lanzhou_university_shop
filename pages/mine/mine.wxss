/* pages/mine/mine.wxss */
.container{
  display: flex;
  flex-direction: column;
}
.header{
  background-color: #ff4c4c;
  padding: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
  vertical-align: middle;
}
.avatar{
  width: 140rpx;
  height: 140rpx;
  border-radius: 80rpx;
}
.name-gander{
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
}

.username{
  color: white;
  font-size: 40rpx;
}

.gender{
  width: 42rpx;
  height: 42rpx;
  margin-left: 10rpx;
}

.wrapper{
  display: flex;
  flex-direction: column;
}
.menu-item{
  padding: 20rpx;
  background: white;
  display: flex;
  flex-direction: row;
  vertical-align: middle;
  align-items: center;
  margin-bottom: 2rpx;
}
.menu-item:active{
  background: #f2f2f2;
}
.menu-item image{
  width: 60rpx;
  height: 60rpx;
  margin-left: 10rpx;
}
.menu-item text{
  margin-left: 20rpx;
  font-size: 34rpx;
  color: #414141;
}

.refresh-button{
  width: 50rpx;
  height: 50rpx;
  outline: none;
  padding: 0;
  margin: 0;
  border:none;
  position: absolute;
  transform: translateX(200%) translateY(200%);
  background-color:transparent;
  background-image: url('data:image/png;base64,');
  background-size: 50rpx 50rpx;
}
.refresh-button::after{
  border:none;
}