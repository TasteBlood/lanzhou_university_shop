/* pages/mine/orders/detail/detail.wxss */
.top-panel{
  padding: 20rpx;
  background-color: #ff4c4c;
}

.address-panel{
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  font-size: 32rpx;
  color: #515151;
  background-color: white;
  line-height: 54rpx;
}

.goods-wrapper{
  background-color: white;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
}

.goods-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: #e1e1e1 solid 1rpx;
  padding: 20rpx;
}

.goods-item:last-child{
  border-bottom:none;
}

.goods-pic{
  width: 100rpx;
  height: 100rpx;
  min-width: 100rpx;
  border: #e1e1e1 solid 1rpx;
}

.goods-info{
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
  color: #515151;
  justify-content: space-between;
}

.goods-name{
   display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.order-panel{
  background-color: white;
  padding: 20rpx;
  margin-top: 40rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  color:#515151;
}

.main-button{
  border: 1rpx solid #ff4c4c;
  font-size: 30rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  color: #ff4c4c;
  border-radius: 40rpx;
}

.second-button{
  border: 1rpx solid #c1c1c1;
  font-size: 30rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  color: #919191;
  border-radius: 40rpx;
}
.bottom-bar{
  /* display: flex; */
  display: none;
  flex-direction: row;
  margin-top: 40rpx;
  justify-content: center;
  
}